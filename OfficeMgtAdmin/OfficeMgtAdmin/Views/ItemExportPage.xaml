<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:OfficeMgtAdmin.Converters"
             x:Class="OfficeMgtAdmin.Views.ItemExportPage"
             Title="物品出库">
    <ContentPage.Resources>
        <converters:ApplyStatusConverter x:Key="ApplyStatusConverter" />
        <converters:CanConfirmConverter x:Key="CanConfirmConverter" />
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <Grid ColumnDefinitions="Auto,200*" ColumnSpacing="10">
                <Label Text="状态筛选："
                       VerticalOptions="Center"/>
                <Picker x:Name="StatusPicker"
                        Grid.Column="1"
                        SelectedIndexChanged="OnStatusFilterChanged">
                    <Picker.Items>
                        <x:String>全部</x:String>
                        <x:String>待审批</x:String>
                        <x:String>已通过</x:String>
                        <x:String>已驳回</x:String>
                    </Picker.Items>
                </Picker>
            </Grid>

            <Border Stroke="{StaticResource Primary}"
                    StrokeThickness="1"
                    StrokeShape="RoundRectangle 5"
                    Padding="15">
                <Grid RowDefinitions="Auto,*">
                    <Label Text="申请记录" 
                           FontSize="Large" 
                           Grid.Row="0" 
                           Margin="0,0,0,10"/>

                    <CollectionView x:Name="ApplyRecordsCollection" 
                                   Grid.Row="1">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="0,5"
                                        Stroke="{StaticResource Gray300}"
                                        StrokeThickness="1"
                                        StrokeShape="RoundRectangle 5"
                                        Padding="10">
                                    <Grid ColumnDefinitions="120,150,80,100,100,Auto,Auto,Auto" 
                                          ColumnSpacing="10">
                                        <Label Text="{Binding Item.Code}" 
                                               Grid.Column="0" 
                                               VerticalOptions="Center"/>
                                        <Label Text="{Binding Item.ItemName}" 
                                               Grid.Column="1" 
                                               VerticalOptions="Center"/>
                                        <Label Text="{Binding ApplyNum}" 
                                               Grid.Column="2" 
                                               VerticalOptions="Center"
                                               HorizontalOptions="End"/>
                                        <Label Text="{Binding ApplyStatus, Converter={StaticResource ApplyStatusConverter}}" 
                                               Grid.Column="3" 
                                               VerticalOptions="Center"/>
                                        <Label Text="{Binding UserName}" 
                                               Grid.Column="4" 
                                               VerticalOptions="Center"/>

                                        <Button Text="详情" 
                                                Grid.Column="5"
                                                Clicked="OnViewDetailsClicked"
                                                CommandParameter="{Binding Id}"
                                                Margin="5,0"/>

                                        <Button Text="通过" 
                                                Grid.Column="6"
                                                IsVisible="{Binding ApplyStatus, Converter={StaticResource CanConfirmConverter}}"
                                                Clicked="OnConfirmClicked"
                                                CommandParameter="{Binding Id}"
                                                Margin="5,0"/>

                                        <Button Text="驳回" 
                                                Grid.Column="7"
                                                IsVisible="{Binding ApplyStatus, Converter={StaticResource CanConfirmConverter}}"
                                                Clicked="OnRejectClicked"
                                                CommandParameter="{Binding Id}"
                                                BackgroundColor="{StaticResource Error}"
                                                Margin="5,0"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </Grid>
            </Border>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage> 