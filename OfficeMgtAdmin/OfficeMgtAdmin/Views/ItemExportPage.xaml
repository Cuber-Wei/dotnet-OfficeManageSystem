<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:OfficeMgtAdmin.Converters"
             x:Class="OfficeMgtAdmin.Views.ItemExportPage"
             Title="物品出库">
    <ContentPage.Resources>
        <converters:ApplyStatusConverter x:Key="ApplyStatusConverter" />
        <converters:CanConfirmConverter x:Key="CanConfirmConverter" />
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto,*" Padding="20">
        <Label Text="申请记录" FontSize="Large" Grid.Row="0" />

        <CollectionView x:Name="ApplyRecordsCollection" Grid.Row="1">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="10" ColumnDefinitions="*,Auto,Auto,Auto,Auto,Auto">
                        <VerticalStackLayout Grid.Column="0">
                            <Label Text="{Binding Item.ItemName}" FontAttributes="Bold" />
                            <Label Text="{Binding ApplyNum, StringFormat='申请数量: {0}'}" />
                            <Label Text="{Binding ApplyDate, StringFormat='申请日期: {0:yyyy-MM-dd}'}" />
                        </VerticalStackLayout>

                        <Label Grid.Column="1" 
                               Text="{Binding ApplyStatus, Converter={StaticResource ApplyStatusConverter}}"
                               VerticalOptions="Center"
                               Margin="10,0" />

                        <Button Grid.Column="2"
                                Text="确认"
                                IsVisible="{Binding ApplyStatus, Converter={StaticResource CanConfirmConverter}}"
                                CommandParameter="{Binding Id}"
                                Clicked="OnConfirmClicked"
                                Margin="5,0" />

                        <Button Grid.Column="3"
                                Text="驳回"
                                IsVisible="{Binding ApplyStatus, Converter={StaticResource CanConfirmConverter}}"
                                CommandParameter="{Binding Id}"
                                Clicked="OnRejectClicked"
                                Margin="5,0" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage> 