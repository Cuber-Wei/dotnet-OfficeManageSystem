<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OfficeMgtAdmin.Views.ItemEditPage"
             Title="编辑物品">
    <ScrollView>
        <VerticalStackLayout Spacing="10" Padding="20">
            <Label Text="物品编码:" />
            <Entry x:Name="CodeEntry" Placeholder="请输入物品编码" />

            <Label Text="物品名称:" />
            <Entry x:Name="NameEntry" Placeholder="请输入物品名称" />

            <Label Text="物品类型:" />
            <Picker x:Name="TypePicker">
                <Picker.Items>
                    <x:String>办公用品</x:String>
                    <x:String>电子设备</x:String>
                    <x:String>家具</x:String>
                    <x:String>其他</x:String>
                </Picker.Items>
            </Picker>

            <Label Text="产地:" />
            <Entry x:Name="OriginEntry" Placeholder="请输入产地" />

            <Label Text="规格:" />
            <Entry x:Name="SizeEntry" Placeholder="请输入规格" />

            <Label Text="型号:" />
            <Entry x:Name="VersionEntry" Placeholder="请输入型号" />

            <Button Text="选择图片" Clicked="OnSelectImageClicked" />

            <Button Text="保存" Clicked="OnSaveClicked" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage> 