<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OfficeMgtAdmin.Views.InventoryQueryPage"
             Title="库存查询">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <Border Stroke="{StaticResource Primary}"
                    StrokeThickness="1"
                    StrokeShape="RoundRectangle 5"
                    Padding="15"
                    Margin="0,0,0,20">
                <Grid ColumnDefinitions="Auto,*" 
                      RowDefinitions="Auto,Auto" 
                      ColumnSpacing="15" 
                      RowSpacing="20">
                    <Label Text="物品类别:" 
                           Grid.Row="0" 
                           Grid.Column="0" 
                           VerticalOptions="Center"/>
                    <Picker x:Name="TypePicker" 
                            Grid.Row="0" 
                            Grid.Column="1">
                        <Picker.Items>
                            <x:String>全部</x:String>
                            <x:String>纸张</x:String>
                            <x:String>文具</x:String>
                            <x:String>刀具</x:String>
                            <x:String>单据</x:String>
                            <x:String>礼品</x:String>
                            <x:String>其它</x:String>
                        </Picker.Items>
                    </Picker>

                    <Button x:Name="QueryButton" 
                            Grid.Row="1" 
                            Grid.Column="0" 
                            Grid.ColumnSpan="2" 
                            Text="查询" 
                            WidthRequest="200"
                            Clicked="OnQueryClicked"/>
                </Grid>
            </Border>

            <Border Stroke="{StaticResource Primary}"
                    StrokeThickness="1"
                    StrokeShape="RoundRectangle 5"
                    Padding="15">
                <Grid RowDefinitions="Auto,*">
                    <Label Text="库存列表" 
                           FontSize="Large" 
                           Grid.Row="0" 
                           Margin="0,0,0,10"/>

                    <CollectionView x:Name="ItemsCollection" 
                                   Grid.Row="1">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="0,5"
                                        Stroke="{StaticResource Gray300}"
                                        StrokeThickness="1"
                                        StrokeShape="RoundRectangle 5"
                                        Padding="10">
                                    <Grid ColumnDefinitions="100,150,100,80,Auto,Auto" 
                                          ColumnSpacing="10">
                                        <Label Text="{Binding Code}" 
                                               Grid.Column="0" 
                                               VerticalOptions="Center"/>
                                        <Label Text="{Binding ItemName}" 
                                               Grid.Column="1" 
                                               VerticalOptions="Center"/>
                                        <Label Text="{Binding ItemType, Converter={StaticResource ItemTypeConverter}}" 
                                               Grid.Column="2" 
                                               VerticalOptions="Center"/>
                                        <Label Text="{Binding ItemNum}" 
                                               Grid.Column="3" 
                                               VerticalOptions="Center"
                                               HorizontalOptions="End"/>

                                        <Button Text="详情" 
                                                Grid.Column="4"
                                                Clicked="OnViewDetailsClicked"
                                                CommandParameter="{Binding Id}"
                                                Margin="5,0"/>

                                        <Button Text="出入库记录" 
                                                Grid.Column="5"
                                                Clicked="OnViewRecordsClicked"
                                                CommandParameter="{Binding Id}"
                                                Margin="5,0"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </Grid>
            </Border>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage> 