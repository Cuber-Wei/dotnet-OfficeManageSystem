<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OfficeMgtAdmin.Views.UserMaintenancePage"
             Title="用户维护">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto" ColumnSpacing="10" RowSpacing="10">
                <Label Text="用户ID:" Grid.Row="0" Grid.Column="0" VerticalOptions="Center"/>
                <Entry x:Name="UserIdEntry" Grid.Row="0" Grid.Column="1" Placeholder="请输入用户ID"/>
                
                <Label Text="密码:" Grid.Row="1" Grid.Column="0" VerticalOptions="Center"/>
                <Entry x:Name="PasswordEntry" Grid.Row="1" Grid.Column="1" Placeholder="请输入密码"/>
                
                <Label Text="姓名:" Grid.Row="2" Grid.Column="0" VerticalOptions="Center"/>
                <Entry x:Name="UserNameEntry" Grid.Row="2" Grid.Column="1" Placeholder="请输入姓名"/>
                
                <Label Text="性别:" Grid.Row="3" Grid.Column="0" VerticalOptions="Center"/>
                <Picker x:Name="GenderPicker" Grid.Row="3" Grid.Column="1">
                    <Picker.Items>
                        <x:String>男</x:String>
                        <x:String>女</x:String>
                    </Picker.Items>
                </Picker>
                
                <Label Text="出生日期:" Grid.Row="4" Grid.Column="0" VerticalOptions="Center"/>
                <DatePicker x:Name="BirthDatePicker" Grid.Row="4" Grid.Column="1"/>
                
                <Label Text="联系电话:" Grid.Row="5" Grid.Column="0" VerticalOptions="Center"/>
                <Entry x:Name="PhoneEntry" Grid.Row="5" Grid.Column="1" Placeholder="请输入联系电话" Keyboard="Telephone"/>
                
                <Button x:Name="SaveButton" Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2" Text="保存" Clicked="OnSaveClicked"/>
            </Grid>
            
            <CollectionView x:Name="UsersCollection" Margin="0,20,0,0">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="10" ColumnDefinitions="Auto,*,Auto,Auto,Auto,Auto">
                            <Label Text="{Binding UserId}" Grid.Column="0"/>
                            <Label Text="{Binding UserName}" Grid.Column="1"/>
                            <Label Text="{Binding Gender}" Grid.Column="2"/>
                            <Label Text="{Binding BirthDate, StringFormat='{0:yyyy-MM-dd}'}" Grid.Column="3"/>
                            <Label Text="{Binding Phone}" Grid.Column="4"/>
                            <Button Text="删除" Grid.Column="5" Clicked="OnDeleteClicked" CommandParameter="{Binding UserId}"/>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage> 