<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OfficeMgtAdmin.Views.ItemAddPage"
             Title="物品入库">
    <ScrollView>
        <VerticalStackLayout Padding="20">
            <Grid RowSpacing="15" ColumnSpacing="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label Text="物品编码：" Grid.Row="0" Grid.Column="0" VerticalOptions="Center"/>
                <Entry x:Name="CodeEntry" Grid.Row="0" Grid.Column="1"/>

                <Label Text="物品名称：" Grid.Row="1" Grid.Column="0" VerticalOptions="Center"/>
                <Entry x:Name="NameEntry" Grid.Row="1" Grid.Column="1"/>

                <Label Text="物品类别：" Grid.Row="2" Grid.Column="0" VerticalOptions="Center"/>
                <Picker x:Name="TypePicker" Grid.Row="2" Grid.Column="1">
                    <Picker.Items>
                        <x:String>纸张</x:String>
                        <x:String>文具</x:String>
                        <x:String>刀具</x:String>
                        <x:String>单据</x:String>
                        <x:String>礼品</x:String>
                        <x:String>其它</x:String>
                    </Picker.Items>
                </Picker>

                <Label Text="产地：" Grid.Row="3" Grid.Column="0" VerticalOptions="Center"/>
                <Entry x:Name="OriginEntry" Grid.Row="3" Grid.Column="1"/>

                <Label Text="规格：" Grid.Row="4" Grid.Column="0" VerticalOptions="Center"/>
                <Entry x:Name="SizeEntry" Grid.Row="4" Grid.Column="1"/>

                <Label Text="型号：" Grid.Row="5" Grid.Column="0" VerticalOptions="Center"/>
                <Entry x:Name="VersionEntry" Grid.Row="5" Grid.Column="1"/>

                <Label Text="数量：" Grid.Row="6" Grid.Column="0" VerticalOptions="Center"/>
                <Entry x:Name="NumEntry" Grid.Row="6" Grid.Column="1" Keyboard="Numeric"/>

                <Label Text="图片：" Grid.Row="7" Grid.Column="0" VerticalOptions="Center"/>
                <HorizontalStackLayout Grid.Row="7" Grid.Column="1" Spacing="10">
                    <Button x:Name="SelectImageButton" Text="选择图片" Clicked="OnSelectImageClicked"/>
                    <Label x:Name="ImagePathLabel" VerticalOptions="Center"/>
                </HorizontalStackLayout>

                <Image x:Name="PreviewImage" Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="2"
                       HeightRequest="200" Aspect="AspectFit"/>

                <Button Text="保存" Grid.Row="9" Grid.Column="0" Grid.ColumnSpan="2"
                        Clicked="OnSaveClicked"/>
            </Grid>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage> 