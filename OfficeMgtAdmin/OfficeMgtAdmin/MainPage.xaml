<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OfficeMgtAdmin.MainPage">

    <ScrollView>
        <VerticalStackLayout Padding="30,200" Spacing="20" WidthRequest="500">
            <Label Text="管理员登录" FontAttributes="Bold" FontSize="Large" HorizontalOptions="Center" />
            <Entry x:Name="UserIdEntry" Placeholder="用户名" />
            <Entry x:Name="PasswordEntry" Placeholder="密码" IsPassword="True" />
            <Button x:Name="LoginBtn" Text="登录" Clicked="OnLoginClicked" HorizontalOptions="Fill" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
