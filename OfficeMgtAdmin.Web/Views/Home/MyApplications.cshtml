@model List<OfficeMgtAdmin.Web.Models.ApplyRecord>
@{
    ViewData["Title"] = "我的申请";
}

<div class="container">
    <div class="row mb-3">
        <div class="col">
            <h2>我的申请</h2>
        </div>
        <div class="col-auto">
            <a href="@Url.Action("Inventory")" class="btn btn-primary">返回库存查询</a>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>物品</th>
                    <th>申请数量</th>
                    <th>申请日期</th>
                    <th>状态</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var application in Model)
                {
                    <tr>
                        <td>@application.Item.ItemName</td>
                        <td>@application.ApplyNum</td>
                        <td>@application.ApplyDate.ToString("yyyy-MM-dd")</td>
                        <td>
                            @(application.ApplyStatus switch
                            {
                                0 => "申请中",
                                1 => "已确认",
                                2 => "已驳回",
                                _ => "未知"
                            })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div> 